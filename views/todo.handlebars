{{#if user}}
<div class="container">

  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <h1 class="page-header text-center">Get It Done</h1>
      <h3>Create A Daily Task</h3>
      <form id="userId" data-user="{{userId}}" class="enter-todo" method="POST" >
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Enter here..." id="task" name="task" autofocus>
          <span class="input-group-btn">
            <button id="create" class="btn btn-primary" type="submit" name="submit">Submit</button>
          </span>
        </div>
      </form>
    </div>
  </div>

{{#if hasTasks}}
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        
        <hr>
        <h3>Tasks To Complete:</h3>
        
        {{#each unfinished as |task| }}
            <div class="task clearfix">
              <span>{{{task.dataValues.task}}}</span>
              <div data-taskid="{{task.dataValues.id}}" class="btn-group pull-right" role="group" aria-label="...">
                <button id="complete-btn" data-id="{{_id}}" type="button" class="btn btn-success complete">Completed</button>
                <button id="edit-btn"data-id="{{_id}}" type="button" class="btn btn-default edit">Edit</button>
                <button id="del-btn" data-id="{{_id}}" type="button" class="btn btn-danger delete">Delete</button>
              </div>
            </div>
        {{/each}}

      </div>
    </div>

    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <hr>
        <h3>Completed Tasks:</h3>
        {{#each complete as |completed|}}
            <div class="task clearfix">
              <span>{{{completed.dataValues.task}}}</span>
              <div data-taskid="{{completed.dataValues.id}}" class="btn-group pull-right" role="group" aria-label="...">
                <button id="del-btn" data-id="" type="button" class="btn btn-danger delcomplete">Delete</button>
              </div>
            </div>
        {{/each}}
      </div>
    </div>
{{/if}}
<script src="./js/createTask.js"></script>
<script src="./js/deleteTask.js"></script>
<script src="./js/editTask.js"></script>
</div>
{{/if}}